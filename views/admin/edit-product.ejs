<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <h1><%= productKey.id %> iuhi</h1>
        <form class="product-form" action="/admin/save-edit-data" method="POST">
            <input type="hidden" name="id" value="<%= productKey.id %>" >
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= productKey.title %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= productKey.imageUrl %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%= productKey.price %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" ><%= productKey.description %></textarea>
            </div>

            <button class="btn" type="submit">edit Product</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>